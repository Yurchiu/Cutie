body {
	opacity: hexo-config('opacity');
	color: $text-color;
	font-family: hexo-config-uq('font_name');
	font-size: $normal-fs;
    font-weight: 500 !important;
	background-image: url(hexo-config('bg-url'));
	background-attachment: fixed;
  	background-repeat: no-repeat;
  	background-position: 50% 50%;
  	background-size: cover;
  	margin: 0 auto;
	box-shadow: 0 0 40px $body-shadow-color;
	height: auto;
	width: $dividing-1;
	line-height: 140%;
	letter-spacing: 1.3px;
    overflow-y: auto;
}

*::selection {
	background: $selection-bg-color; 
	color: $selection-color;
}

.article {
	margin-left: $dis-sidebar-1;
	width: $article-width-1;
	min-height: 800px;
	display: table;
	table-layout: fixed;
	background-color: $post-bg-color;
}

.article-cell-body {
	display: table-cell;
	vertical-align: top;
}

.fa-border {
	border-color: $fa-border-color !important;
}

@media screen and (max-width: $dividing-1) {
    .article {
    	margin-left: $dis-sidebar-2;
    	width: $article-width-2;
        display: table;
    }
    
    body {
    	width: $dividing-2;
    }
}

@media screen and (max-width: $dividing-2) {
    .article {
        margin-left: $dis-sidebar-3;
        width: $article-width-3;
        display: block;
    }
    .article-cell-body {
    	display: block;
    }
	body {
    	width: $dividing-3;
	}
}

@media screen and (max-width: $dividing-3) {
    .article {
        margin: auto;
        width: $article-width-4;
        display: block;
    }
    .santa-container,.natsuki-container {
    	display: none;
    }
    body {
    	width: 100%;
	}
}
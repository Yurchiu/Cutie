.footer {
	background-color: var(--footer-bg-color);
	border-top: 1px solid var(--footer-border-color);
	padding: 15px;
	margin-left: $dis-sidebar-1;
	display: flex;
	justify-content: space-between;

	* { color: var(--footer-color); }

	p { margin: 0px; }

	.text-left,.text-right {
		max-width: 50%;
		overflow: hidden;
		text-overflow: ellipsis;
		white-space: nowrap;
	}
}

@media screen and (max-width: $dividing-1) {
    .footer {
        margin-left: $dis-sidebar-2;
    }
}

@media screen and (max-width: $dividing-2) {
    .footer {
        margin-left: $dis-sidebar-3;
    }
}

@media screen and (max-width: $dividing-3) {
    .footer {
        margin-left: $dis-sidebar-4;
        display: block;
        .text-left,.text-right {
        	display: block;
        	max-width: 100%;
        	white-space: inherit;
        }
    }
}
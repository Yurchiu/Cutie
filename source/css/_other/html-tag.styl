/*  表格  */

table {
	padding: 0;
	border-spacing: 0;
	border-collapse: collapse;
	margin: auto;
	color: var(--table-text-color); 

	tr {
		border-top: 1px solid #ccc;
		background-color: #fff;
		margin: 0;
		padding: 0;

		th {
			font-weight: bold;
			border: 1px solid #ccc;
			text-align: left;
			margin: 0;
			padding: 6px 13px;
			color: #fff;
			background-color: #5db084;

			&:first-child,&:last-child {
				margin-top: 0;
				margin-bottom: 0;
			}
		}

		td {
			border: 1px solid #ddd;
			text-align: left;
			margin: 0;
			padding: 6px 13px;

			&:first-child,&:last-child {
				margin-top: 0;
				margin-bottom: 0;
			}
		}

		&:nth-child(2n) {
			background-color: #e3f1ea;
		}
		&:nth-child(1) th {
			color: #eee;
			border: 1px solid #009688;
			background-color: #009688;
		}
	}
}

/*  引用  */

blockquote {
    padding-left: 9px;
    margin: 1em 3em 1em 2em;
    font-weight: 400;
    border-left: 4px solid rgba(0, 0, 0, .2);
    background-color: var(--blockquote-color);
    word-break: break-all;
    opacity: 0.8;
}

@media screen and (max-width: $width-3) {
    blockquote {
    	margin-block-start: 1em;
    	margin-block-end: 1em;
    	margin-inline-start: 10px;
    	margin-inline-end: 10px;
    }
}

/*  图片  */

img {
	display: block;
    margin: auto;
    opacity: 1;
}

/*  链接  */

a {
	word-break: break-all;
	text-decoration: none;
	color: var(--a-color);
	&:hover {
		transition: 0.6s all;
	}
}

/* 列表 */

@media screen and (max-width: $width-3) {
    ol,ul {
    	padding-inline-start: 15px;
    }
}

/*  分鸽线  */

hr {
	border-style: solid;
	border-color: var(--hr-color);
	border-width: .1px;
	margin: 10px;
	opacity: 1;
}

/*  防止溢出  */

img,figure,canvas,iframe,video{
	max-height: 100%;
	max-width: 100%;
	overflow: auto;
}

pre,code {
	line-height: 120%;
	letter-spacing: 0;
	font-family: hexo-config('mono_font_family');
}

code {
	border-radius: 2px;
	padding: 0px 3px;
}

/*  提示框  */

fieldset {
    border: 2px solid rgba(0,0,0,.8);
    border-radius: .3em;
    padding: 20px;
}
fieldset >legend {
    background-color: #eb5055;
    color: #fff;
    border-radius: .2em;
    padding: .1em .3em;
    font-size: 16px;
    float: none;
    width: auto;
}

/*  展开折叠  */

summary:focus {
    outline-style: none;
}

summary:hover {
    background-color: #ddd;
}

details >summary {
	transition: 0.3s;
	margin: 10px 0;
	border-radius: 25px;
    background-color: #eee;
    text-align: center;
    padding: 10px;
    border-style: none;
    cursor: pointer;
    color: var(--table-text-color);
}

/* 其他 */

u,emp,wavy,del,psw {
	color: var(--text-color) !important;
}

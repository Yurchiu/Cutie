/* 时间线 */

.timeline 
{
	position: relative;
	font-size: 20px;
	list-style: none;
	padding-left: 1.2em !important;
	margin-left: .3em !important;
	border-left: .2em solid $timeline-line-color;
	color: $text-color !important;
	
	a {
		color: $post-text-link-color !important;

		&:hover {
			color: $post-text-link-hover-color !important;
		}
	}
}

.timeline b {
	font-size: 18px;
	font-weight: normal;
	display: block;
	position: relative;
	margin-top: 20px;
	margin-bottom: 10px;
	color: $timeline-b-color;
}

.timeline b::after {
	content: '';
	position: absolute;
	top: .38em;
	left: -2em;
	width: .8em;
	height: .8em;
	border-radius: 50%;
	background-color: $timeline-circle-bg-color;
	border: .14em solid $timeline-circle-color;
	box-shadow: m.15em .15em 0 rgba(255,255,255,1),-0.15em -0.15em 0 rgba(255,255,255,1);
}

.timeline li {
	list-style: none;
	line-height: 100%;
}

.timeline li:hover b::after {
	border-color: $timeline-hover-b-color;

}

.timeline li:hover b {
	color: $timeline-hover-b-color;
}


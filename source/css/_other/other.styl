/*  黑幕  */

.text-shady,.text-blur,.text-invsb {
	transition: 0.6s all;
	&:hover {transition: 0.6s all;}
}

.text-black,.text-shady {
	color: #000;
	background-color: #000;
}

.text-shady:hover {color: #fff;}

.text-blur {
	filter: blur(4px);
	&:hover {filter: blur(0);}
}

.text-invsb {
	opacity: 0;
	&:hover {opacity: 1;}
}

/*  警告条  */

.text-alert {
	padding: .6em .9em;
	border-radius: .3em;
	margin: 1em auto;
	line-height: 1.6em;
	display: block;
	background-color: #ddd;
	color: #999;
}
.text-alert a {
	color: inherit !important;
	border-color: inherit !important;
}
.text-alert a:hover{opacity:.5;}

.text-alert.fa:before{margin-right:.3em;} /* For http://www.fontawesome.com.cn/ */

.text-alert.success {
	background-color: #dff0d8;
	color: #3c763d;
}
.text-alert.info {
	background-color: #d9edf7;
	color: #31708f;
}
.text-alert.warning {
	background-color: #fcf8e3;
	color: #8a6d3b;
}
.text-alert.danger {
	background-color: #f2dede;
	color: #a94442;
}

/*  展开折叠-2  */

.text-collapse {
    margin: 2px;
}
.text-collapse .col-title {
    border-radius: 25px;
    background-color: #f5f5f5;
    text-align: center;
    padding: 10px;
    cursor: pointer;
}
.text-collapse .col-text {
    display: none;
    margin-top: 10px;
}
.text-collapse .col-title:hover + .col-text {
	display: block;
}
.text-collapse .col-title:hover {
	background-color: #eee;
}

/*  滚动条美化  */

::-webkit-scrollbar-track {
	-webkit-box-shadow: inset 0 0 6px rgba(0,0,0,0.3);
	background-color: $scrollbar-bg-color;
	z-index: $max-z-index;
}
::-webkit-scrollbar {
	width: 10px;
	height: 10px;
	background-color: $scrollbar-bg-color;
	z-index: $max-z-index;
}
::-webkit-scrollbar-thumb {
	background-color: $scrollbar-color;
	background-image: -webkit-linear-gradient(45deg,rgba(255,255,255,.4) 25%,transparent 25%,transparent 50%,rgba(255,255,255,.4) 50%,rgba(255,255,255,.4) 75%,transparent 75%,transparent);
	border-radius: 10px;
	z-index: $max-z-index;
}


.YurLoading {
  display: flex;
  background-color: #fff;
  opacity: 0.7;
  position: fixed;
  top: 0;
  left: 0;
  height: 100%;
  width: 100%;
  justify-content: center;
  align-items: center;
  z-index: 99999999;
}

.YurLoading .inner {
    bottom: 0;
    height: 60px;
    left: 0;
    margin: auto;
    position: absolute;
    right: 0;
    top: 0;
    width: 100px;
}

.YurLoading .line-wrap {
    -webkit-animation: 
    YurSpin 2000ms cubic-bezier(.175, .885, .32, 1.275) infinite;
            animation: 
    YurSpin 2000ms cubic-bezier(.175, .885, .32, 1.275) infinite;
    box-sizing: border-box;
    height: 50px;
    left: 0;
    overflow: hidden;
    position: absolute;
    top: 0;
    -webkit-transform-origin: 50% 100%;
            transform-origin: 50% 100%;
    width: 100px;
}

.YurLoading .line {
    border: 4px solid transparent;
    border-radius: 100%;
    box-sizing: border-box;
    height: 100px;
    left: 0;
    margin: 0 auto;
    position: absolute;
    right: 0;
    top: 0;
    width: 100px;
}

.YurLoading .line-wrap:nth-child(1) { -webkit-animation-delay: -50ms; animation-delay: -50ms; }
.YurLoading .line-wrap:nth-child(2) { -webkit-animation-delay: -100ms; animation-delay: -100ms; }
.YurLoading .line-wrap:nth-child(3) { -webkit-animation-delay: -150ms; animation-delay: -150ms; }

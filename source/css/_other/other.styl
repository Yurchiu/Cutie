/* 时间线 */

.timeline {
	position: relative;
	font-size: 20px;
	list-style: none;
	padding-top: .1em;
	padding-bottom: .1em;
	padding-left: 1.2em !important;
	margin-left: .3em !important;
	border-left: .2em solid var(--timeline-line-color);
	color: var(--text-color) !important;
	
	a {
		color: var(--post-text-link-color) !important;
		&:hover {color: var(--post-text-link-hover-color) !important;}
	}

	p {
		border-radius: 10px;
		padding: 13px;
		background-color: rgba(0,0,0,.05);
	}

	b,t {
		font-size: 18px;
		font-weight: normal;
		display: block;
		position: relative;
		margin-top: 20px;
		margin-bottom: 10px;
		color: var(--timeline-b-color);
	}

	t {
		font-size: 25px;
		color: var(--timeline-t-color);
	}

	b::after,t::after {
		content: '';
		position: absolute;
		top: .38em;
		left: -1.84em;
		width: .8em;
		height: .8em;
		border-radius: 50%;
		background-color: var(--timeline-circle-bg-color);
		border: .14em solid var(--timeline-circle-color);
	}

	t::after {
		top: .15em;
		left: -1.45em;
	}

	li {list-style: none;}
	li:hover b::after {border-color: var(--timeline-hover-b-color);}
	li:hover t::after {border-color: var(--timeline-hover-t-color);}
	li:hover b {color: var(--timeline-hover-b-color);}
}


    width: 90px;
    top: 7px;
}
.YurLoading .line-wrap:nth-child(2) .line {
    border-color: hsl(60, 80%, 60%);
    height: 76px;
    width: 76px;
    top: 14px;
}
.YurLoading .line-wrap:nth-child(3) .line {
